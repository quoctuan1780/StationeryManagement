                    <h6 class="m-0 font-weight-bold text-primary">Tiến độ nhập hàng</h6>
                </div>
                <div class="card-body" id="ProcessReceiptChart">
                    
                    
                </div>
            </div>

        </div>

        <div class="col-lg-4 mb-4">

            <!-- Pie Chart -->
            <div class="card shadow mb-4">
