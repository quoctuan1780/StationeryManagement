@model FinalProject.Areas.Admin.ViewModels.CategoryViewModel
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <h1 class="h3 mb-2 text-gray-800">Thêm loại sản phẩm</h1>
    <hr class="hr-end-list" />
    @if (!(ViewBag.MessageSuccess is null))
    {
        <div class="alert alert-success">@ViewBag.MessageSuccess</div>
    }
    @if (!(ViewBag.MessageExists is null))
    {
        <div class="alert alert-danger">@ViewBag.MessageExists</div>
    }
    @if(!(ViewBag.MessageError is null))
    {
        <div class="alert alert-danger">@ViewBag.MessageError</div>
    }
    @using (Html.BeginForm("AddCategory", "Category", FormMethod.Post, new { role = "form", area = "Admin" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(m => m.CaregoryName)
            @Html.TextBoxFor(m => m.CaregoryName, new { @class = "form-control", @name = "name", @id = "name" })
            @Html.ValidationMessageFor(m => m.CaregoryName, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <input type="submit" value="Thêm loại sản phẩm" class="btn btn-success" />
        </div>
    }
</div>