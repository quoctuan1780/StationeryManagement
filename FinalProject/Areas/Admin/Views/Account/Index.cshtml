@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var Shippers = ViewBag.Shippers as IList<Entities.Models.User>;
    var WM = ViewBag.WM as IList<Entities.Models.User>;
}
<div class="container-fluid">

    <h1 class="h3 mb-2 text-gray-800">Danh sách nhân viên</h1>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <a class="btn btn-primary" asp-action="CreateEmployeeAccount" asp-controller="Account" asp-area="Admin">
                    Thêm nhân viên
                </a>
            </h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Tên tài khoản</th>
                            <th>Tên nhân viên</th>
                            <th>Giới tính</th>
                            <th>Email</th>
                            <th>Số điện thoại</th>
                            <th>Chức vụ</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>

                        @if (WM is not null)
                        {
                            @foreach (var item in WM)
                            {
                        <tr>
                            <td>@item.UserName</td>
                            <td>@item.FullName</td>
                            <td>@item.Gender</td>
                            <td>@item.Email</td>
                            <td>@item.PhoneNumber</td>
                            <td>Quản lý kho</td>
                            <td>
                                <a class="label-info" asp-action="ViewInforEmployee" asp-controller="Account" asp-area="Admin" asp-route-id="@item.Id">Xem</a>
                                <a class="danger" onclick="Delete('@item.Id')">Xóa</a>
                            </td>
                        </tr>
                            }
                        }
                        @if (WM is not null)
                        {
                            @foreach (var item in Shippers)
                            {
                    <tr>
                        <td>@item.UserName</td>
                        <td>@item.FullName</td>
                        <td>@item.Gender</td>
                        <td>@item.Email</td>
                        <td>@item.PhoneNumber</td>
                        <td>Người giao hàng</td>
                        <td>
                            <a class="label-info" asp-action="ViewInforEmployee" asp-controller="Account" asp-area="Admin" asp-route-id="@item.Id">Xem</a>
                            <a class="danger" onclick="Delete('@item.Id')">Xóa</a>
                        </td>
                    </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

@section Scripts{ 
<script>
    function Delete(id) {
        $.ajax({
            url: '/Admin/Account/Delete',
            method: 'DELETE',
            async: true,
            data: { id: id },
            success: function (data) {
                if (data > 0) {
                    Swal.fire({
                        title: 'Thông báo',
                        text: "Xóa tài khoản thành công!",
                        icon: 'infor',                        
                        confirmButtonColor: '#3085d6',                        
                        confirmButtonText: `OK`                       
                    })
                }
            }
        })
    }
</script>
} 