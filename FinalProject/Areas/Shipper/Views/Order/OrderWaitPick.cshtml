@using static Common.Constant
@{
    ViewData["Title"] = "Danh sách đơn hàng chờ người giao hàng nhận";
    Layout = "~/Areas/Shipper/Views/Shared/_Layout.cshtml";
    var orders = ViewBag.Orders as IList<Services.Helpers.OrderHelper.OrderJoinHelper>;
    var customers = ViewBag.Customers as IList<Entities.Models.User>;
    var addresses = ViewBag.Addresses as IList<string>;

    var query = Html.ViewContext.HttpContext.Request.Query;

    string customer = null;
    string orderDate = null;
    string address = null;

    if (query.Keys.Contains("customer"))
    {
        customer = query.First(x => x.Key.Equals("customer")).Value;
    }
    if (query.Keys.Contains("orderDate"))
    {
        orderDate = query.First(x => x.Key.Equals("orderDate")).Value;
    }
    if (query.Keys.Contains("address"))
    {
        address = query.First(x => x.Key.Equals("address")).Value;
    }
}

<style>
    .scroll {
        position: fixed;
        bottom: 1rem;
        right: 5%;
        color: white;
        border-radius: 4px;
    }
</style>
<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Thông tin đơn hàng chờ người lấy hàng</h1>
    <div class="card shadow mb-4">
        <div class="card-header">
            <div class="col-lg-12">
                <div class="card shadow mb-4">
                    <a href="#collapseCardExample" class="d-block card-header py-3" data-toggle="collapse"
                       role="button" aria-expanded="true" aria-controls="collapseCardExample">
                        <h6 class="m-0 font-weight-bold text-primary">Bộ lọc</h6>
                    </a>
                    <div class="collapse show" id="collapseCardExample">
                        <div class="card-body">
                            <div class="row d-flex">
                                <div class="col-4">
                                    <div class="form-group">
                                        <label for="user">Lọc theo người xuất kho</label>
                                        <select class="form-control selectpicker show-tick" id="address" data-live-search="true">
                                            <option value="null">Chọn địa chỉ</option>
                                            @if (address == null)
                                            {
                                                foreach (var item in addresses)
                                                {
                                                    <option value="@item">@item</option>
                                                }
                                            }
                                            else
                                            {
                                                foreach (var item in addresses)
                                                {
                                                    if (item.Equals(address))
                                                    {
                                                        <option value="@item" selected>@item</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@item">@item</option>
                                                    }
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="form-group">
                                        <label for="user">Lọc theo ngày đặt hàng</label>
                                        @if (orderDate is null)
                                        {
                                            <input class="form-control" type="date" id="order-date" />
                                        }
                                        else
                                        {
                                            <input class="form-control" type="date" id="order-date" value="@orderDate" />
                                        }
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="form-group">
                                        <label for="user">Lọc theo khách hàng</label>
                                        <select class="form-control selectpicker show-tick" id="customer" data-live-search="true">
                                            <option value="null">Chọn khách hàng</option>
                                            @if (customer == null)
                                            {
                                                foreach (var item in customers)
                                                {
                                                    <option value="@item.Id">@item.FullName</option>
                                                }
                                            }
                                            else
                                            {
                                                foreach (var item in customers)
                                                {
                                                    if (item.Id.Equals(customer))
                                                    {
                                                        <option value="@item.Id" selected>@item.FullName</option>
                                                    }

                                                    else
                                                    {
                                                        <option value="@item.Id">@item.FullName</option>
                                                    }
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="pull-right">
                                <button class="btn btn-primary" onclick="filter()">Lọc</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Chọn đơn</th>
                            <th>Id</th>
                            <th>Tên khách hàng</th>
                            <th>Ngày đặt</th>
                            <th>Địa chỉ giao hàng</th>
                            <th>Phương thức thanh toán</th>
                            <th>Tổng tiền (VNĐ)</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!(orders is null))
                        {
                            foreach (var item in orders)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" name="delivery-choose" value="@item.Order.OrderId" onchange="chooseOrder(this, '@Convert.ToBase64String(item.Order.RowVersion)')" />
                                        <input type="hidden" name="row-version" value="@Convert.ToBase64String(item.Order.RowVersion)" />
                                    </td>
                                    <td>@item.Order.OrderId</td>
                                    <td>@item.Order.User.FullName</td>
                                    <td>@item.Order.OrderDate.Date.ToShortDateString()</td>
                                    <td>@item.Order.Address</td>
                                    <td>@item.Order.PaymentMethod</td>
                                    <td>@item.Order.Total</td>
                                    <td>
                                        <a asp-action="OrderDetail" asp-controller="Order" asp-area="Shipper" asp-route-orderId="@item.Order.OrderId">
                                            Xem
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="row">
            <div class="rounded scroll">
                <button class="btn btn-success btn-sm" onclick="confirmOrder()">Xác nhận giao hàng</button>
                <button class="btn btn-warning btn-sm" onclick="selectAllOrder()">Chọn tất cả</button>
                <button class="btn btn-warning btn-sm" onclick="unselectAllOrder()">Bỏ chọn tất cả</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/notify/notify-helper.js"></script>
    <script src="~/js/loading/loading.js"></script>
    <script>
        var chooseDelivery = [];
        var rowVersions = [];

        function chooseOrder(e, rowVersion) {
            var dom = $(e);

            if (dom[0].checked) {
                chooseDelivery.push(dom.val());
                rowVersions.push(rowVersion);
            }
            else {
                chooseDelivery.splice(chooseDelivery.indexOf(dom.val()), 1);
                rowVersions.splice(rowVersion.indexOf(rowVersion), 1);
            }

            console.log(chooseDelivery)
        }

        function selectAllOrder() {
            $('input[name=delivery-choose]').prop('checked', true);

            var checkbox = $('input[name=delivery-choose]');

            var rowVersion = $('input[name=row-version]');

            chooseDelivery = [];

            for (let item of checkbox) {
                chooseDelivery.push(item.value);
            }

            for (let item of rowVersion) {
                rowVersions.push(item.value);
            }
        }

        function unselectAllOrder() {
            chooseDelivery = [];
            rowVersions = [];
            $('input[name=delivery-choose]').prop('checked', false);
            console.log(chooseDelivery)
        }

        function confirmOrder() {
            if (chooseDelivery.length < 1) {
                showError("Bạn chưa chọn đơn hàng nào");
            }
            else {
                var loading = verticalTextColor();
                loading;
                $.ajax({
                    url: '/Shipper/Order/ConfirmOrder',
                    method: 'PUT',
                    async: true,
                    data: { ordersPicked: chooseDelivery, rowVersion: rowVersions },
                    success: function (data) {
                        loadingOut(loading, 0);
                        if (data === "-4")
                            showError("Bạn chưa chọn đơn hàng nào");
                        else if (data === "-99")
                            showErrorSystem();
                        else {
                            var json = JSON.parse(data);
                            var icon = 'success';
                            var html = "";

                            if (json.Success !== "") {
                                html += "<p class='alert alert-success'>Các đơn hàng đã nhận thành công có mã là: " + json.Success + "</p>";
                            }

                            if (json.Fail !== "") {
                                icon = 'warning';
                                html += "<p class='alert alert-danger'>Các đơn hàng đã được người khác nhận có mã là: "
                                    + json.Fail + "</p>";
                            }
                           
                            Swal.fire({
                                title: 'Thông báo',
                                html: html,
                                icon: icon,
                                confirmButtonColor: '#3085d6',
                                confirmButtonText: 'Xác nhận',
                                allowOutsideClick: false
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    window.location.href = "/Shipper/Order/OrderWaitDelivery";
                                }
                            })
                        }
                    },
                    error: function (code, err) {
                        console.error(err);
                        loadingOut(loading, 0);
                    }
                });
            }
        }

        function filter() {
            var customer = $('#customer').val();
            var address = $('#address').val();
            var orderDate = $('#order-date').val();

            var url = '/Shipper/Order/OrderWaitPick?customer=' + customer +
                '&orderDate=' + orderDate + '&address=' + address;

            window.location.href = encodeURI(url);
        }
    </script>
}   